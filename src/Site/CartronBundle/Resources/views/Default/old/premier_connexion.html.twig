{% extends "SiteCartronBundle::base.html.twig" %}
{% block title %}Cartron: Première connexion{% endblock %}
{% block body %}
<style>
        html{ 
            margin:0;
            padding:0;
            background: url({{ asset('bundles/sitecartron/images/bg-agegate.jpg') }}) no-repeat center fixed;
            -webkit-background-size: cover; /* pour Chrome et Safari */
            -moz-background-size: cover; /* pour Firefox */
            -o-background-size: cover; /* pour Opera */
            background-size: cover; /* version standardisée */
        }
        body{ 
            background: none;
        }

    </style>
    <div class="site">

        <div class="form-visite-content">
            <form action="" method="post" {{ form_enctype(form) }} class="form-visite jqtransform">
                <div class="form-lanque">
                    <a href="{{ path('myapp_choisir_langue', {'langue' : 'fr'}) }}" {% if(app.session.get('_locale')=='fr') %} class="active" {% endif %}>FR</a>
                    <a href="{{ path('myapp_choisir_langue', {'langue' : 'en'}) }}" {% if(app.session.get('_locale')=='en') %} class="active" {% endif %}>EN</a>
                </div>
                <div class="content-form">
                    <p class="pour-visiter">{{ "Pour visiter"|trans }} <strong>CARTRON.FR</strong><br />
                    {{ "vous devez avoir l’âge légal dans votre pays" | trans }}.</p>

                    {{ form_widget(form.pays, { 'attr': {'style': 'width:278px;'} }) }}
                        <span class="label" style="margin-left:8px">
                    {{ "premier_connexion.datenaissance"|trans }} :
                            </span>
                    {{ form_widget(form.dateNaissance) }}
                            <br clear="all" />
                            <div class="se-souvenir">
                    {{ form_widget(form.sesevenire) }}
                                    <span>
                    {{ form_label(form.sesevenire) }}
                                        </span><br clear="all" /></div>
                                </div>
                                <div class="bt-content">
                            {{ form_rest(form) }} 
                                        <input type="submit" value="{{ "entrez sur le site"|trans }}" class="bt" />
                                    </div>
                                </form>
                                <form id="formIdentification" name="formIdentification" action="" method="post"  class="acces-espace-pro">
                                    <p class="acces-direct">{{ "Accéder directement à votre"|trans }} <span>{{ "ESPACE PRO"|trans }}</span></p>
                                    <input type="text" name="identification" id="identification" class="input" value="IDENTIFIANT" />
                                    <input type="text" name="password" id="password" class="input" value="mot de passe" />
                                    <p class="submit-form">
                                        <input type="button" id="ok_login" name="ok" value="OK" class="submit" />
                                        <a href="#" class="passeOubli">{{ "Mot de passe oublié"|trans }}</a>
                                    </p>
                                    <a href="#0" style="margin-left: 59px;" id="demand-d-acces_p" class="demand-d-acces">{{ "Demande d’accès à l’espace professionnel"|trans }}</a>
                                    <p class="mention">{{ "L’abus d’alcool est dangereux pour la santé"|trans }},<br />
                            {{ "à consommer avec modération"|trans }}</p>
                                    </form>





                                </div>
                            </div>

                            <div class="overlay-passe-oublie">
                                <div class="pop-up-passe-oublie">
                                    <a href="" class="close dn"><span>Fermer</span></a>
                                    <label>Votre Email</label>
                                    <input type="text" name="emailenvoie" id="emailenvoie" class="input" value="" />
                                    <input type="submit" id="ok" name="ok" value="OK" class="submit" />
                                </div>
                            </div>

                            
                            <div class="overlay-espace-pro overlay">
                                <div class="popup-espace-pro" style="margin-top:142px;">
                                    <a href="" class="close dn"><span>Fermer</span></a>
                                    <div class="espacePro">
                                        <h2>Demande d'accès à l'espace professionnel</h2>
                                        <form id="formAcces" name="formAcces" action="{{ path('site_cartron_creer_compte_pro') }}" method="post" class="jqtransform">
                                            <h3>Demande d’accès à l’espace professionnel</h3>
                                            <input type="text" name="prenom" id="prenom" class="input" value="prenom" />
                                            <input type="text" name="nom" id="nom" class="input" value="nom" />
                                            <input type="text" name="email" id="email" class="input" value="mail" />

                                            <h3 class="noCenter">votre profil</h3>
                                            <input type="radio" name="profil" id="agent" value="agent" class="checkbox" />
                                            <label for="agent">agent</label>
                                            <input type="radio" name="profil" id="importateur" value="importateur" class="checkbox" />
                                            <label for="importateur">importateur</label>
                                            <input type="radio" name="profil" id="professionnel" value="professionnel" class="checkbox" />

                                            <label for="professionnel" class="last">professionnel</label>
                                            <br clear="all" />
                                            <input type="text" name="societe" id="societe" class="input" value="societe" />
                                            <h3 class="noCenter">message</h3>
                                            <textarea name="message" id="message" cols="1" rows="1"></textarea>
                                            <input type="checkbox" name="conditions" id="conditions" class="checkbox" />
                                            <span class="conditions">En cliquant sur ENVOYER, vous reconnaissez avoir pris connaissance des conditions d’utilisation de l’espace professionnel et déclarez les accepter sans réserve.</span>
                                            <br clear="all" />
                                            <input type="button" id="ok_new_pro" name="ok" value="OK" class="submit" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="overlay-passe-oublie">
                                <div class="pop-up-passe-oublie">
                                    <a href="" class="close dn"><span>Fermer</span></a>
                                    <label>Votre Email</label>
                                    <input type="text" name="emailenvoie" id="mop" class="input" value="" />
                                    <input type="submit" id="ok_mop" name="ok" value="OK" class="submit" />
                                </div>
                            </div>
{% endblock %}
