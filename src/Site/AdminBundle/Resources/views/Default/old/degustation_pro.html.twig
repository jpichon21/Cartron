{% extends "SiteAdminBundle::layout.html.twig" %}
{% block body %}

<!-- start content -->
<div id="content">

    <!--  start page-heading -->
    <div id="page-heading">
        {% if (app.request.get('_route') == 'site_admin_degustation_pro') %}
            <h1>Liste des dégustations (Espace pro) </h1>
            <span  style="float: right;margin-right: 35px;"><a href="{{ path('site_admin_manage_sous_menu_degustation_pro') }}">Ajouter sous menu (dégustation)</a></span>
        {% else  %}
            <h1>Liste des sous menu produit (Espace pro) </h1>
            <span  style="float: right;margin-right: 35px;"><a href="{{ path('site_admin_manage_sous_menu_produit_pro') }}">Ajouter sous menu (produit)</a></span>
        {% endif  %}
    </div>

        <!-- end page-heading -->

        <table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
            <tr>
                <th rowspan="3" class="sized"><img src="{{ asset('bundles/siteadmin/images/shared/side_shadowleft.jpg')}}" width="20" height="300" alt="" /></th>
                <th class="topleft"></th>
                <td id="tbl-border-top">&nbsp;</td>
                <th class="topright"></th>
                <th rowspan="3" class="sized"><img src="{{ asset('bundles/siteadmin/images/shared/side_shadowright.jpg')}}" width="20" height="300" alt="" /></th>
            </tr>
            <tr>
                <td id="tbl-border-left"></td>
                <td>
                    <!--  start content-table-inner ...................................................................... START -->
                    <div id="content-table-inner">
                    {% if produits %}
                            <table width="100%" cellspacing="0" cellpadding="0" border="0" id="product-table">
                                <tbody>
                                    <tr>
                                        <th class="table-header-repeat line-left minwidth-1"><a href="#0">Titre fr </a></th>
                                        <th class="table-header-repeat line-left minwidth-1"><a href="#0">Titre en </a></th>
                                        <th class="table-header-repeat line-left minwidth-1"><a href="#0">Produit</a></th>
                                        <th class="table-header-options line-left"><a href="#0">Actions</a></th>
                                    </tr>
                                       {% for article in produits %}
                                    <tr>

                                        <td>{{ article.titreFr }}</td>
                                        <td>{{ article.titreEn }}</td>
                                        <td>

                                             {% if (app.request.get('_route') == 'site_admin_degustation_pro') %}
                                                <a href="{{ path('site_admin_produit_pro', { 'id': article.id,'type':'autre' }) }}" >Voir produits</a>
                                            {% else  %}
                                                <a href="{{ path('site_admin_produit_pro', { 'id': article.id,'type':'produit' }) }}" >Voir produits</a>
                                             {% endif  %}

                                        </td>
                                        <td class="options-width">
                                            
                                             {% if (app.request.get('_route') == 'site_admin_degustation_pro') %}
                                                <a class="icon-1 info-tooltip" href="{{ path('site_admin_manage_sous_menu_degustation_pro', { 'id': article.id }) }}"></a>
                                                
                                            {% else  %}
                                                 <a class="icon-1 info-tooltip" href="{{ path('site_admin_manage_sous_menu_produit_pro', { 'id': article.id }) }}"></a>
                                                 
                                             {% endif  %}
                                            
                                           
                                        </td>
                                    </tr>

                                        {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}

                        </div>
                        <!--  end content-table-inner ............................................END  -->
                    </td>
                    <td id="tbl-border-right"></td>
                </tr>
                <tr>
                    <th class="sized bottomleft"></th>
                    <td id="tbl-border-bottom">&nbsp;</td>
                    <th class="sized bottomright"></th>
                </tr>
            </table>
            <div class="clear">&nbsp;</div>

        </div>
        <!--  end content -->
{% endblock %}